@model AddToDiaryViewModel
@{
    ViewData["Title"] = "Your Foods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<table>
    <tbody>
        @foreach (var food in Model.All)
        {
            <tr>
                <td class="col-1">@food.Name</td>
                <td class="col-1">
                    <form method="post" asp-action="AddToDiary" asp-route-date="@Model.Date" asp-route-foodId="@food.Id" asp-route-username="@User.Identity.Name">
                        <div class="form-group">
                            Quantity: <input asp-for="Multiplier" class="form-control" value="1" />
                            <span asp-validation-for="Multiplier" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Add Food" class="btn btn-outline-primary"/>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>