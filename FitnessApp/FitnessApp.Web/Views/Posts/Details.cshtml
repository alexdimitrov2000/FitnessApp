@model PostDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isActive = Model.IsLiked ? "active" : string.Empty;
}

<h1>Post Details</h1>
<hr />

<div class="container-fluid">
    <div class="row d-flex justify-content-between">
        <div class="col-md-5">
            <p>Title: @Model.Title</p>
            <p>Content: @Model.Content</p>
            <p>Category: <a asp-controller="Categories" asp-action="Details" asp-route-name="@Model.CategoryName">@Model.CategoryName</a></p>
            <p>Image By: @Model.UserName</p>
        </div>
        <div class="col-md-5">
            <img src="@Model.ImageUrl" />
        </div>
    </div>
    <div class="row d-flex justify-content">
        <div class="col-md-12">
            <p id="likes@(+Model.Id)">@Model.Likes.Count()</p> Likes
        </div>
        <div class="col-md-6">
            <button id="likeBtn" class="@isActive btn btn-default" onclick="like(@($"'{User.Identity.Name}'"),@Model.Id)">Like</button>
        </div>
    </div>

    <div id="comments" class="row">
        @foreach (var comment in Model.Comments)
        {
            <div class="col-md-12">
                <a asp-controller="Users" asp-action="Profile">@comment.User.UserName</a> - @comment.Content
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-6">
            <textarea class="form-control" id="commentsTextBox"></textarea>
        </div>
        <div class="col-md-6">
            <button id="commentBtn" class="btn btn-default" onclick="comment(@($"'{User.Identity.Name}'"), @Model.Id)">Comment</button>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
